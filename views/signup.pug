extends base

block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Sign Up to Natours
      form.form.form--signup
        .form__group
          label.form__label(for='name') Username
          input#name.form__input(type='text', placeholder='Mai khafaga', required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='yours@example.com', required)
        .form__group
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          label.form__label(for='passwordConfirm') Confirm Password
          input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green(type='submit') SIGN UP
