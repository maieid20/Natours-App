mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      //- Check if review.user and review.user.photo exist before rendering the image
      if review.user && review.user.photo
        img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.user.name}`)
      else
        img.reviews__avatar-img(src='/img/default.jpg', alt='Default Avatar')
      
      //- Check if review.user exists before rendering the name
      h6.reviews__user= review.user ? review.user.name : 'Anonymous'
    
    //- Render the review text
    p.reviews__text= review.review

    //- Render star rating
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')
